<div class="row">
	

		<div style="height: 60px;" class="hide-for-small"></div>
		
	<div class="large-8 columns push-2">		
		<div class="section-container tabs" data-section>
			<section class="section">
			<h5 class="title"><a href="#panel1">Login</a></h5>
				<div class="content" data-slug="panel1">
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
						<div class="row collapse">
							<div class="large-2 columns">
								<%= f.label :email, :class => 'inline'  %>
							</div>
							<div class="large-10 columns">
								<%= f.email_field :email %>
							</div>
						</div>
						
						<div class="row collapse">
							<div class="large-2 columns">
								<%= f.label :password, :class => 'inline'  %>
							</div>
							<div class="large-10 columns">
								<%= f.password_field :password %>
							</div>
						</div>
						<% if devise_mapping.rememberable? -%>
						<div class="row collapse">
							<div class="large-2 columns">
								<%= f.label :remember_me, :class=>'inline'  %>
							</div>
							<div class="large-10 columns">
								<%= f.check_box :remember_me%>
							</div>
						</div>
						<% end %>
						
						<div class="row collapse">
							<div class="large-2 columns push-2">
								<%= f.submit "Login", :class => 'button large' %>
							</div>
						</div>
						
						<% end %>
				</div>
			</section>	
			<section class="section">
			<h5 class="title"><a href="#panel1">Forgot Password</a></h5>
				<div class="content" data-slug="panel1">
					<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

						<div class="row collapse">
							<div class="large-2 columns">
								<%= f.label :email, :class=>'inline' %>
							</div>
							<div class="large-6 pull-4 columns">
								<%= f.email_field :email, :id=>"yourName" %>
								<p>An email with instructions will be sent to your address</p>
							</div>
						</div>
												
						<div class="row collapse">
							<div class="large-2 columns push-2">
								<%= f.submit "Reset", :class => 'button large' %>
							</div>
						</div>
						
						<% end %>
				</div>
			</section>	

		</div>
	</div>


</div>