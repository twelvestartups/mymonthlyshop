  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "My Monthly Shop" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>

	<meta charset="utf-8">
	<meta content="width=device-width" name="viewport">

	<script src="http://code.jquery.com/jquery-latest.js"></script>
	<link href='http://fonts.googleapis.com/css?family=Dosis:300,400,700|Michroma|Aldrich|Shanti|Pontano+Sans' rel='stylesheet' type='text/css'>
	
	</script>

  </head>

  <body>
	
	<div style="background:#1a2129; border-bottom: 1px solid #fff;">
		<div class="row">
			<div class="large-12 columns">
				<%= render "pages/nav" %>

			</div>
		</div>
		
			<% if flash[:notice] %>
		      <p class="notice"><%= flash[:notice] %></p>
		    <% end %>
		    <% if flash[:error] %>
		      <p class="error"><%= flash[:error] %></p>
		    <% end %>
		
	</div>
		
    <%= yield %>
	
	<%= render "pages/footer" %>
	
    <%= javascript_include_tag "application" %>
